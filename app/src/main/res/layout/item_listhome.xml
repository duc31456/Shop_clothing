<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"
    app:cardBackgroundColor="#D3D3D3"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_home"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ao_den" />
        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:gravity="center"
            android:background="@drawable/custom_discount"/>
        <TextView
            android:id="@+id/mota_imagehome"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="160dp"
            android:gravity="center|top"
            android:padding="10dp"
            android:text="Mô tả"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gia_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:gravity="center"
                android:text="Gía tiền"
                android:textColor="#D81D1D"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/gia2_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:text="Gía tiền"
                android:textColor="#6F000000"
                android:textSize="13sp" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>